<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/skyblue_100"
            android:ems="10"
            android:gravity="center_horizontal"
            android:inputType="textPersonName"
            android:text="@string/My_Car_Info"
            android:fontFamily="@font/nanumbarunpenb"
            android:textColor="@color/white"
            android:textSize="55dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/carimage" />

        <TextView
            android:id="@+id/MyCarName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="내 차 이름"
            android:fontFamily="@font/nanumbarunpenb"
            android:textSize="32dp" />

        <EditText
            android:id="@+id/MyCarNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="애마"
            android:fontFamily="@font/nanumbarunpenr"
            android:textSize="32dp" />

        <TextView
            android:id="@+id/MyCarCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="차량 제조사"
            android:fontFamily="@font/nanumbarunpenb"
            android:textSize="32dp" />

        <EditText
            android:id="@+id/MyCarCompanyInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="기타"
            android:fontFamily="@font/nanumbarunpenr"
            android:textSize="32dp" />

        <TextView
            android:id="@+id/MyCarRange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="주행가능거리(km)"
            android:fontFamily="@font/nanumbarunpenb"
            android:textSize="32dp" />

        <EditText
            android:id="@+id/MyCarRangeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:text="0"
            android:fontFamily="@font/nanumbarunpenr"
            android:textSize="32dp" />

        <TextView
            android:id="@+id/MyCarPlug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="충전 플러그"
            android:fontFamily="@font/nanumbarunpenb"
            android:textSize="32dp" />

        <Spinner
            android:id="@+id/MyCarPlugInput"
            android:layout_width="match_parent"
            android:layout_height="44dp" />
    </LinearLayout>

</LinearLayout>