<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

<RelativeLayout
    android:id="@+id/map_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
</RelativeLayout>

    <Button
        android:id="@+id/F_botton"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/buttonshape"
        android:drawableTop="@drawable/little_whitexml"
        android:text="@string/Brand"
        android:textColor="@color/black"
        android:textSize="15sp" />
<AbsoluteLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<Button
    android:id="@+id/F_button2"
    android:layout_width="90dp"
    android:layout_height="40dp"
    android:layout_y="150dp"
    android:background="@drawable/buttonshape2"
    android:shadowColor="@color/gray"
    android:shadowDx="1"
    android:shadowDy="1"
    android:shadowRadius="1"
    android:text="@string/Find_mapping"
    android:textColor="@color/gray"
    android:textSize="12sp" />
<Button
    android:id="@+id/F_button3"
    android:layout_width="90dp"
    android:layout_height="40dp"
    android:layout_y="230dp"
    android:background="@drawable/buttonshape3"
    android:shadowColor="@color/gray"
    android:shadowDx="1"
    android:shadowDy="1"
    android:shadowRadius="1"
    android:text="@string/Arrange_Info"
    android:textColor="@color/gray"
    android:textSize="12sp" />
<Button
    android:id="@+id/F_button4"
    android:layout_width="90dp"
    android:layout_height="40dp"
    android:layout_y="310dp"
    android:background="@drawable/buttonshape4"
    android:shadowColor="@color/gray"
    android:shadowDx="1"
    android:shadowDy="1"
    android:shadowRadius="1"
    android:text="@string/My_Car_Info"
    android:textColor="@color/gray"
    android:textSize="12sp"
    />

</AbsoluteLayout>

</FrameLayout>